<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rm222_mind_14"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/perfRating"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/home_text_outline"
        android:clickable="true"
        android:onClick="allPerformersClicked"
        android:text="Your Performers"
        android:textAlignment="center"
        android:textColor="#3C403D"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlist" />

    <TextView
        android:id="@+id/playlist"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/home_text_outline"
        android:clickable="true"
        android:onClick="allSongsClicked"
        android:text="Your Playlists"
        android:textAlignment="center"
        android:textColor="#3C403D"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analysis" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ash_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_songs"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/home_text_outline"
        android:clickable="true"
        android:onClick="allSongsClicked"
        android:text="Your Added Songs"
        android:textAlignment="center"
        android:textColor="#3C403D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/analysis"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/home_text_outline"
        android:clickable="true"
        android:onClick="analysisClicked"
        android:text="Analysis of Your Songs"
        android:textAlignment="center"
        android:textColor="#3C403D"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_songs" />
</androidx.constraintlayout.widget.ConstraintLayout>